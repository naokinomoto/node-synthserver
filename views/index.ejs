<!doctype html>
<html lang="ja">
  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  </head>
  <body>
    <style type="text/css" media="screen">
      html {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 14px;
        line-height: 1.428571429;
        color: #111111;
      }
      div#visualizer {
        position:absolute;
        width:100%;
        height:100%;
        top:0px;
        left:0px;
        z-index:-100;
        margin: 0;
      }
      #scope-view {
        //width:100%;
        //height:100%;
        top:0px;
        left:0px;
      }
      div.controler {
        font-weight:bold;
        background-color: rgba(255, 128, 128, 0.7);
        text-align: right;
        width: 250px;
        margin-left:auto;
        margin-top:5px;
        margin-bottom:5px;
        padding:5px;
        border-radius:5px;
        box-shadow:3px 3px 0 rgba(255, 0, 0, 0.7);
      }
      div.seq {
        width: 400px;
      }
      div.seq span.step {
        width: 40px;
        height: 40px;
      }
      div.seq span.step-current {
        width: 40px;
        height: 40px;
        background-color: yellow;
      }
    </style>
    <div id="visualizer">
      <canvas id="scope-view"></canvas>
    </div>

    <div id="container">
      <div class="controler">
        freq : <input type="range" id="freq" value="1000" max="2000" min="0" step="1"><br/>
        lfo / speed : <input type="range" id="lfo" value="0.5" max="200" min="0" step="1"><br/>
        lfo / depth : <input type="range" id="depth" value="0" max="2000" min="0" step="1"><br/>

        env / attack : <input type="range" id="attack" value="0" max="100" min="1" step="1"><br/>
        env / decay : <input type="range" id="decay" value="0" max="100" min="1" step="1"><br/>
        env / sustain : <input type="range" id="sustain" value="0" max="1" min="0" step="0.1"><br/>
        env / time : <input type="range" id="sustainTime" value="0" max="1000" min="1" step="1"><br/>
        env / release : <input type="range" id="release" value="0" max="100" min="1" step="1"><br/>

      </div>
      <div id="seq" class="controler seq">
        seq <input type="checkbox" id="seqonoff" name="seqonoff" value="0">
        <input type="range" id="bpm" value="120" max="200" min="0" step="1">
        <br/>
        <span id="step-1" class="step">
          <input type="checkbox" name="gate" value="0">
        </span>
        <span id="step-2" class="step">
          <input type="checkbox" name="gate" value="1">
        </span>
        <span id="step-3" class="step">
          <input type="checkbox" name="gate" value="2">
        </span>
        <span id="step-4" class="step">
          <input type="checkbox" name="gate" value="3">
        </span>
        <span id="step-5" class="step">
          <input type="checkbox" name="gate" value="4">
        </span>
        <span id="step-6" class="step">
          <input type="checkbox" name="gate" value="5">
        </span>
        <span id="step-7" class="step">
          <input type="checkbox" name="gate" value="6">
        </span>
        <span id="step-8" class="step">
          <input type="checkbox" name="gate" value="7">
        </span>
        <span id="step-9" class="step">
          <input type="checkbox" name="gate" value="8">
        </span>
        <span id="step-10" class="step">
          <input type="checkbox" name="gate" value="9">
        </span>
        <span id="step-11" class="step">
          <input type="checkbox" name="gate" value="10">
        </span>
        <span id="step-12" class="step">
          <input type="checkbox" name="gate" value="11">
        </span>
        <span id="step-13" class="step">
          <input type="checkbox" name="gate" value="12">
        </span>
        <span id="step-14" class="step">
          <input type="checkbox" name="gate" value="13">
        </span>
        <span id="step-15" class="step">
          <input type="checkbox" name="gate" value="14">
        </span>
        <span id="step-16" class="step">
          <input type="checkbox" name="gate" value="15">
        </span>
      </div>
      <div class="controler">
        volume(browser only) : <input type="range" id="volume" value="1" max="1" min="0" step="0.01"><br/>
      </div>

    </div>
    <script type="text/javascript" src="/app.js"></script>
  </body>
</html>
